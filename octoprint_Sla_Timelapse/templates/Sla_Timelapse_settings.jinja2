<div class="control-group">
    <label class="control-label" for="gpio_pin">GPIO Pin Number:</label>
    <div class="controls">
        <input type="number" id="gpio_pin" name="settings[gpio_pin]" min="0" max="40" step="1" value="{{ settings.get('gpio_pin', 17) }}">
        <p class="help-block">Enter the BCM GPIO pin number (0-40) for your setup.</p>
    </div>
</div>